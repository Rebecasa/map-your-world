

<div
  id="map"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
>
    <div class="link-to-country">
     <%@markers.each do |marker|%>
       <%@countries.each do |country|%>
          <%= link_to country_path(country.id)%>
        <%end%>
      <%end%>
    </div>
</div>
